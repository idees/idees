{
  "name": "idees",
  "version": "1.0.0",
  "description": "A markdown editor which support several cloud file storage backends.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package-mac": "electron-packager . Idees --overwrite --asar --platform=darwin --arch=x64 --icon=public/icons/mac/icon.icns --prune=true --out=release-builds --ignore=\"release-builds|assets|.idea|.*.md|.*.yml\"",
    "package-win": "electron-packager . idees --overwrite --asar --platform=win32 --arch=ia32 --icon=public/icons/win/icon.ico --prune=true --out=release-builds --ignore=\"release-builds|assets|.idea|.*.md|.*.yml\" --version-string.CompanyName=\"HeadFile Studio\" --version-string.FileDescription=\"A markdown editor which support several file storage backends.\" --version-string.ProductName=\"idees\"",
    "package-linux": "electron-packager . idees --overwrite --asar --platform=linux --arch=x64 --icon=public/icons/png/1024x1024.png --prune=true --out=release-builds --ignore=\"release-builds|assets|.idea|.*.md|.*.yml\"",
    "dev": "npm run development",
    "development": "cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "watch": "cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --watch --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "watch-poll": "npm run watch -- --watch-poll",
    "hot": "cross-env NODE_ENV=development node_modules/webpack-dev-server/bin/webpack-dev-server.js --inline --hot --config=node_modules/laravel-mix/setup/webpack.config.js",
    "prod": "npm run production",
    "production": "cross-env NODE_ENV=production node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js"
  },
  "repository": "https://github.com/idees/idees",
  "keywords": [
    "Idees",
    "Electron",
    "Markdown",
    "Editor",
    "Cloud Storage"
  ],
  "author": "Toby",
  "license": "Apache License 2.0",
  "devDependencies": {
    "electron": "~1.6.2"
  },
  "dependencies": {
    "devtron": "^1.4.0",
    "electron-store": "^1.3.0",
    "electron-packager": "^9.1.0",
    "laravel-mix": "^1.4.5",
    "axios": "^0.16.2",
    "bootstrap-sass": "^3.3.7",
    "codemirror": "^5.30.0",
    "cross-env": "^5.0.5",
    "crypto-js": "^3.1.9-1",
    "font-awesome": "^4.7.0",
    "highlight.js": "^9.12.0",
    "interact.js": "^1.2.8",
    "jquery": "^3.2.1",
    "lodash": "^4.17.4",
    "markdown-it": "^8.4.0",
    "markdown-it-ins": "^2.0.0",
    "markdown-it-mark": "^2.0.0",
    "markdown-it-toc": "^1.1.0",
    "mousetrap": "^1.6.1",
    "sweetalert": "^2.0.8",
    "vue": "^2.4.4",
    "vue-js-modal": "^1.3.4",
    "webdav": "^1.1.0"
  }
}
